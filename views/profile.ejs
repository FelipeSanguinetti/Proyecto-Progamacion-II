<% if (locals.user != null) { %>
	<%- include('./partials/headerLogueado') %>
<% } else { %>
	<%- include('./partials/header') %>
<% } %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= userP.imagen %> " alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= userP.usuario %> 
						<a href="me/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
				</div>
				<div>
					<ul class="profile-info">
						<li><%= userP.nombre %> <%= userP.apellido %> </li>
						<li><%= userP.mail %></li>
						<li>Productos: <%=userP.productos.length %> </li>
						<li>Comentarios: <%=userP.comentarios.length %></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for( let i = 0; i < products.length; i++ ) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/id/<%= products[i].id %>">
						<figure class="product-box_image">
							<img src="<%=products[i].imagen%>" alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2><%=products[i].nombre%></h2>
							<p><%= products[i].descripcion %></p>
							<p>Comentarios: <%= products[i].comentarios.length %></p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->

<%- include('./partials/footer') %>