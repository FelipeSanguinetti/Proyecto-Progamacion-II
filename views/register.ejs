<% if (locals.user != null) { %>
	<%- include('./partials/headerLogueado') %>
<% } else { %>
	<%- include('./partials/header') %>
<% } %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<% if (locals.error) { %>
			<div class="alert alert-danger" role="alert">
				<%=error %>
			</div>

		<% } %>

		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form method="POST" class="register-form" enctype="multipart/form-data">
				<div class="mb-3">
					<label for="nombre" class="form-label">Nombre</label>
					<input type="text" class="form-control-reg" name="nombre" id="nombre">
				</div>
				<div class="mb-3">
					<label for="apellido" class="form-label">Apellido</label>
					<input type="text" class="form-control-reg" name="apellido" id="apellido">
				</div>
				<div class="mb-3">
					<label for="usuario" class="form-label">Usuario</label>
					<input type="text" class="form-control-reg" name="usuario" id="usuario">
				</div>
				<div class="mb-3 form-picture">
					<label class="form-label" for="imagen">Foto de perfil</label>
					<input type="file" class="form-control-reg" name="imagen" id="imagen">
				</div>
				<div class="mb-3 form-picture">
					<label class="form-label" for="fechaNacimiento">Fecha de nacimiento</label>
					<input type="date" class="form-control-reg" name="fechaNacimiento" id="fechaNacimiento">
				</div>
				<div class="mb-3">
				  <label for="mail" class="form-label">Email</label>
				  <input type="text" class="form-control-reg" name="mail" id="mail">
				</div>
				<div class="mb-3">
					<label for="contrasena" class="form-label">Contrase√±a</label>
					<input type="password" class="form-control-reg" name="contrasena" id="contrasena">
				  </div>
				<button type="submit" class="btn btn-primary">Registrarse</button>
			</form>
			
		

<%- include('./partials/footer') %>