<% if (locals.user != null) { %>
	<%- include('./partials/headerLogueado') %>
<% } else { %>
	<%- include('./partials/header') %>
<% } %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			
			<% if (products.length == 0){%>
					<h2 class="products-title">No se han encontrado resultados para tu busqueda.</h2>
			<% }else { %> 
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<% for (let i=0; i<products.length; i++){ %> 
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%= products[i].id %> ">
							<figure class="product-box_image">
								<img src="<%=products[i].imagen%>" alt="<%=products[i].tipo%> <%=products[i].nombre %> ">
							</figure>
							<article class="product-box_data">
									<h2><%=products[i].nombre%></h2>
									<p><%= products[i].usuario.usuario%> </p>
									<p><%= products[i].descripcion %> </p>
									<p>Comentarios: <%= products[i].comentarios.length %> </p>
							</article>
						</a>
					</section>
				</div>
			<%} }%>

<%- include('./partials/footer') %>