<% if (locals.user != null) { %>
	<%- include('./partials/headerLogueado') %>
<% } else { %>
	<%- include('./partials/header') %>
<% } %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form class="login-form">
				<div class="mb-3">
				  <label for="exampleInputEmail2" class="form-label">Email</label>
				  <input type="email" class="form-control-reg" id="exampleInputEmail2">
				</div>
				<div class="mb-3">
					<label for="exampleInputUser1" class="form-label">Usuario</label>
					<input type="text" class="form-control-reg" id="exampleInputUser1">
				</div>
				<div class="mb-3">
				  <label for="exampleInputPassword2" class="form-label">Contraseña</label>
				  <input type="password" class="form-control-reg" id="exampleInputPassword2">
				</div>
				<div class="mb-3 form-date">
					<label class="form-label" for="exampleDate">Fecha de nacimiento</label>
					<input type="date" class="form-control-reg" id="exampleDate">
				</div>
				<div class="mb-3 form-dni">
					<label class="form-label" for="exampleDni">Número de documento</label>
					<input type="number" class="form-control-reg" id="exampleDni">
				</div>
				<div class="mb-3 form-picture">
					<label class="form-label" for="examplePicture">Foto de perfil</label>
					<input type="file" class="form-control-reg" id="examplePicture">
				</div>
				<button type="submit" class="btn btn-primary">Registrarse</button>
			</form>

<%- include('./partials/footer') %>